" FZF

""" COMPAT
command Rg FzfLua live_grep
command Rgr FzfLua live_grep_resume
command Files FzfLua files
command History FzfLua oldfiles
command Buffers FzfLua buffers

" lua <<EOF
" -- Store the last search query
" local last_search = ""

" -- Debug function to safely print values

" -- Function to clean and validate the file path
" local function clean_and_validate_path(s)
"   -- Remove any leading non-alphanumeric characters
"   local cleaned = s:gsub("^[^%w/]+", "")
"   -- Check if the cleaned path exists in git
"   local exists = os.execute('git ls-files --error-unmatch "' .. cleaned .. '" > /dev/null 2>&1')
"   return exists and cleaned or nil
" end

" -- Custom function to open FzfLua git_files with last search
" function _G.fzf_git_files_with_last_search()
"   local fzf_lua = require('fzf-lua')


"   fzf_lua.git_files({
"     prompt = "> ",
"     cmd = "git ls-files --exclude-standard --cached --others",
"     fzf_opts = {
"       ["--query"] = last_search ~= "" and last_search or nil
"     },
"     actions = {
"       ["default"] = function(selected, opts)
"         if selected and #selected > 0 then
          
"           local file_to_open = clean_and_validate_path(selected[1])
"           if file_to_open then
"             last_search = vim.fn.fnamemodify(file_to_open, ":t")  -- Store only the filename
"             vim.cmd('edit ' .. vim.fn.fnameescape(file_to_open))
"           else
"           end
"         end
"       end
"     }
"   })
" end

" -- Set up the keymaps
" vim.api.nvim_set_keymap('n', '<C-p>', '<cmd>lua fzf_git_files_with_last_search()<CR>', { noremap = true, silent = true })
" vim.api.nvim_set_keymap('i', '<C-p>', '<ESC><cmd>lua fzf_git_files_with_last_search()<CR>', { noremap = true, silent = true })
" EOF
nnoremap <C-p> :FzfLua git_files <CR>
inoremap <C-p> <ESC>:FzfLua git_files <CR>

nnoremap <C-x> :FzfLua buffers <CR>
inoremap <C-x> <ESC>:FzfLua buffers <CR>

nnoremap <Leader>r :FzfLua resume <CR>
inoremap <Leader>r <ESC>:FzfLua resume <CR>


nnoremap <C-o> :Rgr <CR>
inoremap <C-o> <ESC>:Rgr <CR>

lua <<EOF
 local actions = require'fzf-lua.actions'
 require 'fzf-lua'.setup({'default',
   actions = {
     files = {
       -- instead of the default action 'actions.file_edit_or_qf'
       -- it's important to define all other actions here as this
       -- table does not get merged with the global defaults
       ["default"]       = actions.file_edit,
       ["ctrl-s"]        = actions.file_split,
       ["ctrl-v"]        = actions.file_vsplit,
       ["ctrl-t"]        = actions.file_tabedit,
       ["ctrl-q"]         = actions.file_sel_to_qf,
     },
   },
 })
EOF


